<%- include("partials/header"); %> 
<h1>Compose</h1>
<form action="/compose" method="POST">
    <label>Title</label>
    <input type="text" name="title" class="form-control" autocomplete="off" required autofocus>
    <label>Post</label>
    <textarea name="post" cols="30" rows="5" class="form-control" required></textarea>
    <label>Author</label>
    <input type="text" name="author" class="form-control" autocomplete="off" required>
    <button type="submit" class="btn btn-warning" style="margin-top:10px;">Publish</button>
</form>
<%- include("partials/footer"); %>